<UserControl x:Class="PrayerSoft.UI.PrayerJamaat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dt="clr-namespace:PrayerSoft.UI.DesignTime"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <d:UserControl.DataContext>
        <dt:PrayerJamaatDesignTimeViewModel></dt:PrayerJamaatDesignTimeViewModel>
    </d:UserControl.DataContext>
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="{Binding Message}" HorizontalAlignment="Center"></Label>
            <Label Content="{Binding CurrentTime}" HorizontalAlignment="Center"></Label>
        </StackPanel>
    </Grid>
</UserControl>
