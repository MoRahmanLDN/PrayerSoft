<Window x:Class="PrayerSoft.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrayerSoft.UI"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:dt="clr-namespace:PrayerSoft.UI.DesignTime"
        xmlns:root="clr-namespace:PrayerSoft;assembly=PrayerSoft"
        mc:Ignorable="d"
        Title="PrayerSoft" Height="576" Width="1024">
    <Window.DataContext>
        <root:MainWindowViewModel/>
    </Window.DataContext>
    <d:Window.DataContext>
        <dt:MainWindowDesignTimeViewModel></dt:MainWindowDesignTimeViewModel>
    </d:Window.DataContext>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding OnLoaded}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <StackPanel>
            <Label Content="{Binding Today.CurrentTime}"></Label>
            <Label Content="{Binding Today.CurrentDate}"></Label>
            <Label Content="{Binding Today.CurrentIslamicDate}"></Label>
            <Grid Margin="0,0,-0.4,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Grid.Column="0" Grid.Row="2" Content="Fajr"/>
                <Label Grid.Column="0" Grid.Row="3" Content="Asr"/>
                <Label Grid.Column="0" Grid.Row="4" Content="Maghrib"/>
                <Label Grid.Column="0" Grid.Row="5" Content="Isha"/>

                <Label Grid.Column="1" Grid.Row="1" Content="Begins"/>
                <Label Grid.Column="2" Grid.Row="1" Content="Jamaat"/>

                <Label Grid.Column="1" Grid.Row="2" Content="{Binding PrayersToday.FajrBegins}"/>
                <Label Grid.Column="2" Grid.Row="2" Content="{Binding PrayersToday.FajrJamaat}"/>

                <Label Grid.Column="1" Grid.Row="3" Content="{Binding PrayersToday.AsrBegins}"/>
                <Label Grid.Column="2" Grid.Row="3" Content="{Binding PrayersToday.AsrJamaat}"/>

                <Label Grid.Column="1" Grid.Row="4" Content="{Binding PrayersToday.MaghribBegins}"/>
                <Label Grid.Column="2" Grid.Row="4" Content="{Binding PrayersToday.MaghribJamaat}"/>

                <Label Grid.Column="1" Grid.Row="5" Content="{Binding PrayersToday.IshaBegins}"/>
                <Label Grid.Column="2" Grid.Row="5" Content="{Binding PrayersToday.IshaJamaat}"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
